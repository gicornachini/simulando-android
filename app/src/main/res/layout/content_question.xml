<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="giovannicornachini.simulando.QuestionActivity"
    tools:showIn="@layout/activity_question">


    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:weightSum="1"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/questionIndexIndicatorTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/300"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/questionTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="0.12"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Loading"
            android:textAlignment="textStart" />

        <Button
            android:id="@+id/alternativeABtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A)" />

        <Button
            android:id="@+id/alternativeBBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="B)" />

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="C)" />

        <Button
            android:id="@+id/alternativeDBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="D)" />

        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="E)" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
